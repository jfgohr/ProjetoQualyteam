
@{
    ViewData["Title"] = "Lista";
}

<div>

    <h3>Lista de documentos</h3>
    <script src="~/scripts/sorttable.js"></script>
    <script>sorttable.sort_alpha = function (a, b) { return a[0].localeCompare(b[0]); }</script>
    <table class="sortable, table table-hover table-responsive">
        <thead>
            <tr>
                <th width="3%" scope="col" id="Id">#</th>
                <th width="28%" scope="col" id="Titulo" class="">Título</th>
                <th width="55%" scope="col" id="Processo">Processo</th>
                <th width="10%" scope="col" id="Categoria">Categoria</th>
                <th width="4%" scope="col">Anexo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in ViewBag.Documentos)
            {
                <tr>
                    <td scope="row">@doc.Id</td>
                    <td>@doc.Titulo</td>
                    <td>@doc.Processo</td>
                    <td>@doc.Categoria</td>
                    <td data-toggle="tooltip" title="@doc.Nome"><a href="/Home/Download/@doc.Id"><img src="data:image/png;base64,"></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

